<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partial/header') %>
    <link rel="stylesheet" href="css/login.css" />
    <link rel="stylesheet" href="css/mask.css" />
    <script src="https://www.google.com/recaptcha/api.js"></script>
  </head>
  <body>
    <%- include('./partial/navbar') %>
    <div class="login-container col-lg-12 col-md-12 col-sm-12 col-xs-12">
      <div class="login-box">
        <h1>Masuk</h1>
        <form>
          <!-- <input type="text" placeholder="Nomor Telepon" class="input" /> -->
          <div class="userInputBox">
            <input type="tel" id="usernameInputBox" required />
            <Label for="usernameInputBox">Nomor Telepon</Label>
          </div>
          <button type="submit" class="manual-button">Lanjut</button>
          <p class="signup-text">
            Tidak memiliki akun?&nbsp;&nbsp;<a
              href="/signup"
              class="signup-link"
              >SIGN UP</a
            >
          </p>
        </form>
      </div>
      <div class="mask"></div>
    </div>
    <%- include('./partial/footer') %> <%- include('./partial/scriptFooter') %>
    <script src="/javascript/cursorNormal.js"></script>
  </body>
</html>
